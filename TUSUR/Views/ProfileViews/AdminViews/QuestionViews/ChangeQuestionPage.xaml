<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="TUSUR.Views.ProfileViews.AdminViews.QuestionViews.ChangeQuestionPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" HorizontalOptions="Center" Margin="0,20,0,0">
            <Label Text="Изменение вопроса" HorizontalOptions="Center" Margin="0,0,0,20" />
            <StackLayout Orientation="Horizontal" Margin="0,0,0,20">
                <Label Text="id вопроса:" />
                <Entry Placeholder="Введите id" />
            </StackLayout>
            <StackLayout Orientation="Horizontal" Margin="0,0,0,20">
                <Label Text="Заголовок вопроса:" />
                <Entry Placeholder="Введите заголовок" />
            </StackLayout>
            <StackLayout Orientation="Vertical" Margin="0,0,0,20">
                <Label Text="Текст вопроса:" HorizontalOptions="Center" />
                <Editor HeightRequest="100" BackgroundColor=" Silver"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal" Margin="0,0,0,20">
                <Label Text="Прошедший вопрос ?:" HorizontalOptions="Center" />
                <Switch IsToggled="false" />
            </StackLayout>
            <Button Text="Применить" Clicked="Apply_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
